<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/channel_row_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:longClickable="false"
    android:orientation="horizontal"
    tools:visibility="visible">

    <ImageView
        android:id="@+id/channel_row_expand"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="12dp"
        android:tint="?android:attr/textColorSecondary"
        app:srcCompat="@drawable/ic_action_collapsed" />

    <ImageView
        android:id="@+id/channel_row_join"
        android:layout_width="32dp"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:tint="?android:attr/textColorSecondary"
        app:srcCompat="@drawable/ic_action_move" />

    <ImageView
        android:id="@+id/channel_row_more"
        android:layout_width="32dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:longClickable="false"
        android:paddingLeft="8dp"
        android:tint="?android:textColorSecondary"
        android:visibility="invisible"
        app:srcCompat="@drawable/ic_more_vert_black_24dp"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/channel_row_count"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:longClickable="false"
        android:padding="10dp"
        android:text="10"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/channel_row_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical|left"
        android:longClickable="false"
        android:minHeight="48dp"
        android:padding="4dp"
        android:text="Channel name\nLine 2\nLine 3\nLine 4" />
</LinearLayout>